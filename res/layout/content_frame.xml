<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <fragment
        android:id="@+id/file_fragment"
        android:name="net.micode.fileexplorer.FileViewActivity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <fragment
        android:id="@+id/category_fragment"
        android:name="net.micode.fileexplorer.FileCategoryActivity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <fragment
        android:id="@+id/ftp_fragment"
        android:name="net.micode.fileexplorer.ServerControlActivity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@drawable/actionbar_shadow" />

</FrameLayout>